<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donna.musicapp">

    <application
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongActivity"
            android:label="@string/song"
            android:parentActivityName="com.example.donna.musicapp.MainActivity" />
        <activity
            android:name=".ArtistActivity"
            android:label="@string/artist"
            android:parentActivityName="com.example.donna.musicapp.MainActivity" />
        <activity
            android:name=".AlbumActivity"
            android:label="@string/albums"
            android:parentActivityName="com.example.donna.musicapp.MainActivity" />
        <activity
            android:name=".LibraryActivity"
            android:label="@string/library"
            android:parentActivityName="com.example.donna.musicapp.MainActivity" />

    </application>
    <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.example.donna.musicapp.MainActivity" />

</manifest>